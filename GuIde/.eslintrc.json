{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [ "import" ],
  "settings": {
    "import/resolver": {
      "webpack": "./webpack/dev.js"
    }
  },
  "globals": {
    "__CLIENT__": false,
    "__DEV__": false,
    "__PROD__": false,
    "__SERVER__": false,
    "__API_ROOT__": false,
    "__DEVTOOLS__": false,
    "r": true,
    "webpackIsomorphicTools": true
  },
  "rules": {
    "react/jsx-first-prop-new-line": 0,
    "no-underscore-dangle": 0,
    "global-require": 0
  }
}
